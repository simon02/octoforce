- @title = "Sign Up"
.container
  .row
    .center_panel
      .panel.panel-devise.only
        .panel-heading
          %a.brand{href: '/'}
            Octoforce

        .panel-body

          = form_for resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal do |f|

            / = devise_error_messages!

            = f.hidden_field :timezone
            = f.email_field :email, autofocus: true
            = f.password_field :password, autocomplete: "off"
            = f.password_field :password_confirmation, autocomplete: "off"

            - if devise_mapping.rememberable?
              = f.check_box :remember_me

            = f.submit "Sign Up"

          %p.text-right
            = render partial: "devise/shared/links"

- content_for :javascripts do
  = javascript_include_tag "jstz.min", "/vendor/assets/javascripts"
  :javascript
    $(function() {
      $("#user_timezone").val(jstz.determine().name())
    })
