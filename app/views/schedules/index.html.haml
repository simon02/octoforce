.container
  .row
    - if @identities.empty?
      %p.large
        = "You need to add a social network first:"

      = render partial: 'identities/add'

    - else
      .col-md-2
        .filter
          .title Filter by account
          %ul.categories
            = render partial: 'shared/filter_identities', locals: { identities: @identities }

      .col-md-10
        .center_panel

          - @schedules.each do |schedule|
            = render partial: 'schedule', locals: { schedule: schedule }

